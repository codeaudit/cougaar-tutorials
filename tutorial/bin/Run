if [ "$COUGAAR_INSTALL_PATH" = "" ]
 then
  echo Please set COUGAAR_INSTALL_PATH
  exit 2
fi

if [ "$1" = "" ]
 then
   echo Run requires an argument  eg: Run HanoiNode
   exit 2
fi

LIBPATHS=$COUGAAR_INSTALL_PATH/lib/core.jar
LIBPATHS=$LIBPATHS:$COUGAAR_INSTALL_PATH/lib/xml4j_2_0_11.jar
LIBPATHS=$LIBPATHS:$COUGAAR_INSTALL_PATH/lib/planserver.jar
LIBPATHS=$COUGAAR_INSTALL_PATH/lib/tutorial.jar:$LIBPATHS

#  pass in "NodeName" to run a specific named Node

MYPROPERTIES=
MYMEMORY=
MYCLASSES=org.cougaar.core.society.Node
MYARGUMENTS=" -c -n $1"

# @ECHO ON

java $MYPROPERTIES $MYMEMORY -classpath $LIBPATHS $MYCLASSES $MYARGUMENTS $2 $3
