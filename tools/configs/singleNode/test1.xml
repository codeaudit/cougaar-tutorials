<?xml version='1.0'?>
<!--
singleNode: Test Society for 1 pingers on Single Node
-->
<society>
  <node name="Node1">
    <component class="org.cougaar.test.regression.ping.PingSequencerPlugin">
      <argument name="suiteName" value="singleNode 1" />
      <argument name="nodeCount" value="1" />
      <argument name="defaultWorkerTimeout" value="5050" />
      <argument name="defaultNodeTimeout" value="15050" />
      <argument name="csvFileName" value="singleNode.csv" />
      <argument name="collectionLength" value="20000" />
      <argument name="steadyStateWait" value="1000" />
    </component>
    <component class="org.cougaar.test.regression.RegressionAggregatorPlugin">
      <argument name="workerCount" value="1" />
      <argument name="maxIdleTime" value="30100" />
    </component>
	
    <agent name='NameServer' class='org.cougaar.core.agent.SimpleAgent'>
      <facet role='NameServer'/>
      <component class='org.cougaar.core.wp.server.Server'/>
    </agent>

    
      <!--Pinger 1 -->
    <agent name="Src1">
      <component class="org.cougaar.test.regression.ping.PingTesterPlugin">
         <argument name="workerId" value="Src1"/>
         <argument name="pingerCount" value="1"/>
       </component>

      <component class="org.cougaar.test.regression.ping.PingSenderPlugin">
        <argument name="pluginId" value="1"/>
        <argument name="targetAgent" value="Snk1"/>
        <argument name="targetPlugin" value="1"/>
        <argument name="preambleCount" value="3" />
      </component>
    </agent>
    <agent name="Snk1">
      <component class="org.cougaar.test.regression.ping.PingReceiverPlugin">
        <argument name="pluginId" value="1"/>
      </component>
    </agent>

  </node>
</society>
