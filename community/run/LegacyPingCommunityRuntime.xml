<?xml version='1.0'?>

<!--
"LegacyPing" runtime System Properties.
This runtime will use the legacy template with the old legacy community implementation (from lib/community.jar).
Thus, the configuration for the community will be taken from communities.xml
-->
<runtime>

  <!-- Set infrastructure template to legacy (default) to get legacy community component loaded (default for legacy), see doc/OnlineManual/Templates.html -->
  <vm_parameter
    name="-Dorg.cougaar.society.xsl.param.template"
    value="legacy"/>

  <!--  We set explicitly we want to use the old communities implementation (from org/cougaar/community - community.jar) -->
  <vm_parameter
    name="-Dorg.cougaar.society.xsl.param.communities"
    value="legacy"/>

  <!-- Optional log4j config file -->
  <vm_parameter
     name="-Dorg.cougaar.core.logging.config.filename"
     value="logging.props"/>
</runtime>
