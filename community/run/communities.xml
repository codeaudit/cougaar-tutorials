<?xml version="1.0" encoding="UTF-8"?>
<!-- Community definition for the legacy version (org.cougaar.community) 
 	For the new implementation of communities (org.cougaar.core.agent.service.community), 
 	the definition is in the society description file -->

<Communities>
	<Community Name="CommunityA">
		<!-- no CommunityManager is specified explicitly, one is selected among the possible ones -->
		<Entity Name="Agent-1">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<Attribute ID="canBeManager" Value="True" />
			<!-- extra application attribute -->
			<Attribute ID="myAttribute" Value="false" />
		</Entity>
		<!-- EntityType="Agent", Role="Member" and canBeManager="True" are the default values -->
		<Entity Name="Agent-2"/>
		<Entity Name="Agent-3">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<!-- can't be CommunityManager -->
			<Attribute ID="canBeManger" Value="False" />
		</Entity>
		<Entity Name="Agent-4">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<!-- can't be CommunityManager -->
			<Attribute ID="canBeManger" Value="No" />
			<!-- we make it a receiver (it's the role we have defined for receivers)  -->
			<Attribute ID="Role" Value="PingReceiver" />
			<!-- extra application attribute -->
			<Attribute ID="Good-receiver" Value="true" />
		</Entity>
		<Entity Name="Agent-5">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<!-- Another receiver -->
			<Attribute ID="Role" Value="PingReceiver" />
			<!-- extra application attributes -->
			<Attribute ID="Good-receiver" Value="true" />
			<Attribute ID="Champion" Value="true" />
		</Entity>
		<!-- example of nested community -->
		<Entity Name="CommunityD">
			<Attribute ID="EntityType" Value="Community" />
			<Attribute ID="Role" Value="Member" />
		</Entity>		
	</Community>
	<Community Name="CommunityB">
		<!-- it's possible to specify which one is the CommunityManager -->
		<Attribute ID="CommunityManager" Value="Agent-2"/>
		<Entity Name="Agent-2">
			<!-- nothing is specified, it can become the CommunityManager -->
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<Attribute ID="Good-receiver" Value="false" />
		</Entity>
		<Entity Name="Agent-3">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<Attribute ID="Good-receiver" Value="false" />
		</Entity>
	</Community>
	<Community Name="CommunityC">
		<Entity Name="Agent-1">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
		</Entity>
		<Entity Name="Agent-4">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<Attribute ID="Good-receiver" Value="true" />
		</Entity>
	</Community>	
	<Community Name="CommunityD">
		<Entity Name="Agent-1">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
		</Entity>
		<Entity Name="Agent-2">
			<Attribute ID='EntityType' Value='Agent' />
			<Attribute ID="Role" Value="Member" />
			<Attribute ID="Good-receiver" Value="true" />
		</Entity>
	</Community>		
</Communities>
