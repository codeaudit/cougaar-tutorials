<?xml version='1.0'?>

<!--
"ping" runtime System Properties.
This runtime will use the legacy template, but specify explicitly the new community implementation.
Thus, the configuration for the community will be taken from the society file.
-->
<runtime>

  <!-- Set infrastructure template to legacy (default) to get legacy community component loaded (default for legacy), see doc/OnlineManual/Templates.html -->
  <vm_parameter
    name="-Dorg.cougaar.society.xsl.param.template"
    value="legacy"/>

  <!--  We set explicitly we want to use the new communities implementation (from org/cougaar/core/agent/service/community) -->
  <vm_parameter
    name="-Dorg.cougaar.society.xsl.param.communities"
    value="true"/>

  <!-- Optional log4j config file -->
  <vm_parameter
     name="-Dorg.cougaar.core.logging.config.filename"
     value="logging.props"/>
</runtime>
